
@{
    ViewBag.Title = "KM";
}

<style>
    .content {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: flex-start;
    }

    .title {
        width: fit-content;
        color: #000000;
        font-size: 25px;
        font-weight: normal;
        text-align: left;
        margin: 0 20px 10px;
        margin-right: 1000px;
        margin-left: auto;
        display: flex;
        flex-wrap: wrap;
    }

    .new-items {
        display: flex;
        align-items: center;
        margin-right: 90px;
        margin-left: auto;
    }

    .search-form {
        display: flex;
        align-items: center;
        margin-left: 710px;
    }

    input[type="text"] {
        border: none;
        border-radius: 5px;
        padding: 8px;
        width: 280px;
        border: 1px solid #000000;
    }

    button[type="submit"] {
        padding: 10px;
        border: none;
        border-radius: 0 20px 20px 0;
        background-color: #007bff;
        color: #fff;
        cursor: pointer;
        margin-left: 10px;
        border: 1px solid #000000;
    }

    #create-folder-btn {
        background-color: #3795BD;
        border: none;
        color: white;
        padding: 8px 16px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin-right: 16px;
        cursor: pointer;
        border-radius: 10px;
    }

    hr.style19 {
        width: 100%;
        border-top: 4px solid #1E5F74;
        color: #1E5F74;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .upload-btn {
        background-color: #dddddd;
        color: black;
        padding: 8px 16px;
        border: none;
        text-align: center;
        cursor: pointer;
        border-radius: 10px;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin-right: 16px;
    }

    .styled-table {
        border-collapse: collapse;
        margin: auto;
        font-size: 0.9em;
        font-family: sans-serif;
        min-width: 1200px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        /*width: 80%;*/
    }

    .styled-table thead tr {
        background-color: #f2f2f2;
        color: #000000;
        text-align: left;
    }
    
    .styled-table th,
    .styled-table td {
        padding: 12px 15px;
    }
    
    .styled-table tbody tr {
        border-bottom: 1px solid #dddddd;
    }

    .styled-table tbody tr:last-of-type {
        border-bottom: 2px solid #f2f2f2;
    }

    .popover {
        position: fixed;
        display: none;
        background-color: #f9f9f9;
        border: 1px solid #ccc;
        padding: 10px;
    }

    .popover-content {
        color: #333;
    }

    #viewCountPopover {
        position: absolute;
        display: none;
        background-color: #f9f9f9;
        border: 1px solid #ccc;
        padding: 10px;
        z-index: 999;
    }

</style>
<!--content-->
<div class="content">
    <h1 class="title">Knowledge Management</h1>
    <div class="new-items">
        <a href="@Url.Action("Create_file","Knowledge", new { folderID = ViewBag.Id})" class="upload-btn">Upload File</a>
        <form class="search-form">
            <input type="text" placeholder="Search..." name="search">
            <button type="submit">Go</button>
        </form>
    </div>
</div>
<hr class="style19"><br /> <!--end content-->

@*<p>This is folder ID : @ViewBag.Id</p>*@

<table class="styled-table">
    <thead>
        <tr>
            <th>ลำดับ</th>
            <th>ชื่อเอกสาร</th>
            <th>ประเภทเอกสาร</th>
            <th>วันที่ลงเอกสาร</th>
            <th>วันที่แก้ไขเอกสาร</th>
            <th>เอกสาร</th>
            <th>จัดการเอกสาร</th>
        </tr>
    </thead>
    <tbody>
        @*เพิ่มลำดับ*@
        @{
            int counter = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @counter
                    @{
                        counter++;
                    }
                </td>
                <td>@item.file_name</td>
                <td>@item.genre</td>
                <td>@item.dayReleaseDate </td>
                <td>@item.dayEditDate </td>
                <td>
                    <a href="@Url.Action("OpenFile", "Knowledge", new { id = item.id })" target="_blank" onmouseover="showViewCountPopover(this, @item.id)">ดูเอกสาร</a>
                    <div id="viewCountPopover" class="popover">
                        <div class="popover-content">
                            ยอดดูเอกสาร <span id="viewCountValue">0</span> คน
                        </div>
                    </div>
                </td>
                <td>
                    @Html.ActionLink("แก้ไข", "Edit", new { id = item.id, folderID = ViewBag.Id }, new { id = item.id, @class = "btn btn-warning" }) &nbsp;

                    <input type="button" value="ลบ" class="btn btn-danger delete-btn" data-id="@item.id" /> &nbsp;
                    <a href="javascript:;" class="btn btn-primary" onclick="DownloadFile(@item.id)">โหลด</a>
                </td>
            </tr>
        }
    </tbody>
</table>





@using (Html.BeginForm("Delete", "Knowledge", FormMethod.Post, new { id = "deleteForm" }))
{
    <input type="hidden" name="id" id="deleteId" />
}
@using (Html.BeginForm("DownloadFile", "Knowledge", FormMethod.Post))
{
    <input type="hidden" id="hfFileId" name="id" />
    <input type="submit" id="btnDownload" value="Download" style="display:none" />
}


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $(".delete-btn").click(function () {
            if (confirm('คุณต้องการลบเอกสารหรือไม่')) {
                var id = $(this).data("id");
                var row = $(this).closest("tr");

                $.ajax({
                    url: "/Knowledge/Delete",
                    type: "POST",
                    data: { id: id },
                    success: function (response) {
                        if (response.success) {
                            // Remove the row from the UI
                            row.remove();
                            console.log("Data deleted successfully.");

                            // Reload the page
                            location.reload();
                        } else {
                            console.log("Error deleting data.");
                        }
                    },
                    error: function () {
                        console.log("Error deleting data.");
                    }
                });
            }
        });
    });
</script>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">
    function DownloadFile(id) {
        $("#hfFileId").val(id);
        $("#btnDownload")[0].click();
    };
</script>

<script>
    var timeout;

    $(document).on("mousemove", function (event) {
        var target = $(event.target);

        // ตรวจสอบว่าป๊อปอัพถูกแสดงอยู่หรือไม่
        if ($("#viewCountPopover").is(":visible")) {
            // ตรวจสอบว่าผู้ใช้งานเลื่อนเม้าส์ไปยังส่วนอื่นของหน้าเว็บ
            if (!target.is("#viewCountPopover") && !target.closest("#viewCountPopover").length) {
                // ซ่อนป๊อปอัพ
                hideViewCountPopover();
            }
        }
    });

    function showViewCountPopover(element, documentId) {
        // เรียก AJAX request เพื่อดึงค่า view_count จากฐานข้อมูล
        $.ajax({
            url: "/Knowledge/GetViewCount",
            type: "GET",
            data: { id: documentId },
            success: function (data) {
                // อัปเดตค่า view_count ในป๊อปอัพ
                $("#viewCountValue").text(data);

                // แสดงป๊อปอัพ
                var offsetTop = $(element).offset().top;
                var offsetLeft = $(element).offset().left;
                var elementHeight = $(element).outerHeight();

                $("#viewCountPopover").css({
                    display: "block",
                    top: offsetTop + elementHeight,
                    left: offsetLeft
                });

                // ตั้งเวลาให้ป๊อปอัพซ่อนเมื่อผู้ใช้งานเลื่อนเม้าส์ไปยังส่วนอื่นของหน้าเว็บ
                clearTimeout(timeout);
                timeout = setTimeout(hideViewCountPopover, 5000);
            }
        });
    }

    function hideViewCountPopover() {
        // ซ่อนป๊อปอัพ
        $("#viewCountPopover").hide();
    }
</script>

