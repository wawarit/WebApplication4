<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Knowledge Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="styles.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
    @RenderSection("scripts", required: false)
<style>
        body {
            margin: 0;
            padding: 0;
        }

        .header {
            height: 70px;
            position: sticky;
            top: 0;
            display: flex;
            align-items: center;
            background-color: #1E5F74;
        }

        .brand {
            width: 20%;
            display: flex;
            align-items: center;
        }

        .navbar {
            height: 45px;
            position: sticky;
            top: 70px;
            padding: 0 20px;
            margin-bottom: 20px;
            border-radius: 0;
        }

        .bg-light {
            background-color: #D9D9D9;
        }

        .navbar-expand-lg {
            flex-flow: row nowrap;
            justify-content: flex-start;
            -webkit-box-direction: normal;
        }
        ul.navbar-nav {
            flex-wrap: nowrap;
        }

        ul.navbar-nav li {
            white-space: nowrap;
        }
        ul li b {
            font-weight: bold;
            color: #4B5D67;
            font-size: 14px;
            font-family: "Montserrat", "Helvetica Neue", Arial, sans-serif;
        }

        .navbar-toggler-icon {
            display: inline-block;
            width: 1.5em;
            height: 1.5em;
            vertical-align: middle;
            content: "";
            background: no-repeat center center;
            background-size: 100% 100%;
        }
    
    </style>


</head>
<body>
    <section class="header">
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <a class="brand-sm-6" href="#">
            <img src="~/Images/Logo.png" alt="" width="240">
        </a>
    </section>

    <!-- navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-expand-md">
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a class="navbar-brand" href="@Url.Action("Charts_Dashborad", "Knowledge")"><b>Dashboard</b></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#"><b>ปฏิทิน&กิจกรรม </b></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("organizationChart", "Organizational")"><b>โครงสร้างองค์กร</b></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("CreateFoldersKM", "Knowledge")"><b>การจัดการความรู้</b></a>
                </li>
                @*<li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("ViewDownload_count", "Knowledge")"><b>ยอดดูเอกสาร&ดาวน์โหลด</b></a>
                </li>*@
            </ul>
        </div>
    </nav>
    <!-- end navbar -->

    <div class="container body-content">
        @RenderBody()
        @*<hr />*@
        @*<footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>*@
    </div>
</body>
</html>